{% extends 'main/index.html.twig' %}

{% block title %} Home {% endblock %}

{% block content %}
    <div class="container pt-8 mt-6 flex flex-col gap-4">
        {% if codes is empty %}
            <h3 class="text-3xl">{{ headerTitle }}</h3>
            <h3 class="text-3xl">Sorry, no codes are currently available</h3>
        {% else %}
            <h3 class="text-3xl">{{ headerTitle }}</h3>
            <!-- component -->
            <div class="flex items-center justify-center">
                <div class="overflow-x-auto">
                    <h3 class="text-3xl"></h3>
                    <table class="min-w-full bg-white shadow-md rounded-xl">
                        <thead>
                        <tr class="bg-blue-gray-100 text-center text-gray-700">
                            <th class="py-3 px-4">Name</th>
                            <th class="py-3 px-4">Description</th>
                            <th class="py-3 px-4">View Code</th>

                        </tr>
                        </thead>
                        <tbody class="text-blue-gray-900">
                        {% for code in codes %}
                            <tr class="border-b border-blue-gray-200">
                                <td class="py-3 px-4">{{ code.title }}</td>
                                <td class="py-3 px-4">{{ code.description }}</td>
                                <td class="py-3 px-4">
                                    <a href="{{ path("app_code" , {id: code.id}) }}" class="font-medium text-blue-600 hover:text-blue-800">View</a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>

                </div>
            </div>
        {% endif %}
    </div>
{% endblock %}