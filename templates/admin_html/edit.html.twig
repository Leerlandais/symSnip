{% extends 'admin/index.html.twig' %}

{% block title %}Edit Html{% endblock %}

{% block content %}
    <h1>Edit Html</h1>
<div class="mt-24">
    {{ include('admin_html/_form.html.twig', {'button_label': 'Update'}) }}
</div>
    <form method="post" action="{{ path('app_admin_html_delete', {'id': html.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ html.id) }}">
        <button class="bg-[#DD1F48] w-fit py-2 px-6 my-2 mx-auto rounded-md text-white font-bold cursor-pointer hover:bg-[#FF1F08]">Delete</button>
    </form>
    <a href="{{ path('app_admin_html_index') }}" class="bg-[#138808] w-fit py-2 px-6 my-2 mx-auto rounded-md text-white font-bold cursor-pointer hover:bg-[#13AF08]">back to html list</a>

{% endblock %}
