{% extends 'admin/index.html.twig' %}

{% block title %}Update Code{% endblock %}

{% block content %}
    <div class="mt-24">
        {{ include('admin_code/_form.html.twig') }}
    </div>
    <form method="post" action="{{ path('app_admin_code_delete', {'id': main_code.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ main_code.id) }}">
        <button class="bg-[#DD1F48] w-fit py-2 px-6 my-2 mx-auto rounded-md text-white font-bold cursor-pointer hover:bg-[#FF1F08]">Delete</button>
    </form>
    <a href="{{ path('app_admin_code_index') }}" class="bg-[#138808] w-fit py-2 px-6 my-2 mx-auto rounded-md text-white font-bold cursor-pointer hover:bg-[#13AF08]">Back to Codes</a>
{% endblock %}
