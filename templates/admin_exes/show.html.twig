{% extends 'admin/index.html.twig' %}

{% block title %}Executable{% endblock %}

{% block content %}
<div class="text-center border border-gray-700 pt-2 px-6 pb-6 mt-28 flex flex-col items-center">
    <h3 class="text-3xl text-center underline">{{ exes_code.title | capitalize }}</h3>
    <h4 class="text-2xl text-center">{{ exes_code.description }}</h4>
    <a href="{{ asset('downloads/multi-install-tool.exe') }}" download><img src="{{ asset('images/NodeIcon.png') }}" alt="{{ exes_code.description }}" class="h-36 w-36"></a>
    <h6 class="italic text-sm">Click the image to download</h6>
</div>
    <a href="{{ path('app_admin_exes_edit', {id: exes_code.id}) }}">
    <button class="bg-[#4F46E5] w-fit py-2 px-6 my-6 mx-auto rounded-md text-white font-bold cursor-pointer hover:bg-[#181196]" type="submit">
        Update Executable
    </button>
    </a>
    <form method="post" action="{{ path('app_admin_exes_delete', {'id': exes_code.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ exes_code.id) }}">
        <button class="bg-[#DD1F48] w-fit py-2 px-6 my-6 mx-auto rounded-md text-white font-bold cursor-pointer hover:bg-[#FF1F08]">Delete</button>
    </form>
    <a href="{{ path('app_admin_exes_index') }}" class="bg-[#138808] w-fit py-2 px-6 my-6 mx-auto rounded-md text-white font-bold cursor-pointer hover:bg-[#13AF08]">Back to Executables</a>


{% endblock %}